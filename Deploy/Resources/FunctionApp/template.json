{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {        
        "rgLocation": {
            "type": "string",
            "defaultValue": "tbd"
        },
        "functionAppName": {
            "type": "string",
            "metadata": {
                "description": "The name of the function app that you wish to create."
            }
        },
        "planName": {
            "type": "string",
            "metadata": {
                "description": "The name of app service plan which the function app will be using."
            }
        },
        "keyVaultName": {
            "type": "string",
            "metadata": {
                "description": "The name of the key vault which the function app will be using."
            }
        },
        "storageAccountConnectionString": {
            "type": "securestring",
            "defaultValue": "tbd"
        },
        "appInsightsKey": {
            "type": "securestring",
            "defaultValue": "tbd"
        },
        "customerOrdersQueue": {
            "type": "string",
            "defaultValue": "customerorders"
        },
        "ordersTable": {
            "type": "string",
            "defaultValue": "Orders"
        }
    },
    "variables": {     
        "queueConnectionString": "[concat('@Microsoft.KeyVault(SecretUri=https://', parameters('keyVaultName'), '.vault.azure.net/secrets/queueConnectionString/)')]",
        "azureAdTenantId": "[concat('@Microsoft.KeyVault(SecretUri=https://', parameters('keyVaultName'), '.vault.azure.net/secrets/azureAdTenantId/)')]",
        "azureAdAudience": "[concat('@Microsoft.KeyVault(SecretUri=https://', parameters('keyVaultName'), '.vault.azure.net/secrets/azureAdAudience/)')]",
        "timeZone": "AUS Eastern Standard Time"
    },
    "resources": [
        {
            "apiVersion": "2015-08-01",
            "type": "Microsoft.Web/sites",
            "name": "[parameters('functionAppName')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "location": "[parameters('rgLocation')]",
            "kind": "functionapp",
            "resources": [
                {
                    "name": "slotConfigNames",
                    "type": "config",
                    "apiVersion": "2018-11-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', parameters('functionAppName'))]"
                    ],
                    "tags": {
                        "displayName": "slotConfigNames"
                    },
                    "properties": {
                        "appSettingNames": [
                            "CustomerApiKey"
                        ]
                    }
                },
                {
                    "type": "config",
                    "name": "appsettings",
                    "apiVersion": "2018-11-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('functionAppName'))]"
                    ],
                    "properties": {     
                        "AzureAd:TenantId": "[variables('azureAdTenantId')]",
                        "AzureAd:Instance": "https://login.microsoft.com/",
                        "AzureAd:Audience": "[variables('azureAdAudience')]",
                        "AzureAd:Scopes": "access.funkystore.api",        
                        "AzureAd:Roles": "orders.create",
                        "QueueConnectionString": "[variables('queueConnectionString')]",
                        "CustomerOrdersQueue": "[parameters('customerOrdersQueue')]",
                        "OrdersTable": "[parameters('ordersTable')]",
                        "AzureWebJobsStorage": "[parameters('storageAccountConnectionString')]",
                        "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING": "[parameters('storageAccountConnectionString')]",
                        "WEBSITE_CONTENTSHARE": "[toLower(parameters('functionAppName'))]",
                        "FUNCTIONS_EXTENSION_VERSION": "~3",
                        "APPINSIGHTS_INSTRUMENTATIONKEY": "[parameters('appInsightsKey')]",
                        "FUNCTIONS_WORKER_RUNTIME": "dotnet",
                        "WEBSITE_TIME_ZONE": "[variables('timeZone')]",
                        "WEBSITE_ADD_SITENAME_BINDINGS_IN_APPHOST_CONFIG": 1
                    }
                }
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('planName'))]"
            }
        },
        {
            "type": "Microsoft.Web/sites/slots",
            "name": "[concat(parameters('functionAppName'),'/Staging')]",
            "location": "[parameters('rgLocation')]",
            "kind": "functionapp",
            "apiVersion": "2016-08-01",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('functionAppName'))]"
            ],
            "identity": {
                "type": "systemAssigned"
            },
            "properties": {
                "serverFarmId": "[parameters('planName')]"
            },
            "resources": [
                {
                    "name": "appsettings",
                    "type": "config",
                    "apiVersion": "2016-08-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites/Slots', parameters('functionAppName'), 'Staging')]"
                    ],
                    "properties": {   
                        "AzureAd:TenantId": "[variables('azureAdTenantId')]",
                        "AzureAd:Instance": "https://login.microsoft.com/",
                        "AzureAd:Audience": "[variables('azureAdAudience')]",
                        "AzureAd:Scopes": "access.funkystore.api",        
                        "AzureAd:Roles": "orders.create",                        
                        "QueueConnectionString": "[variables('queueConnectionString')]",  
                        "CustomerOrdersQueue": "[parameters('customerOrdersQueue')]",
                        "OrdersTable": "[parameters('ordersTable')]",                   
                        "AzureWebJobsStorage": "[parameters('storageAccountConnectionString')]",
                        "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING": "[parameters('storageAccountConnectionString')]",
                        "WEBSITE_CONTENTSHARE": "[toLower(parameters('functionAppName'))]",
                        "FUNCTIONS_EXTENSION_VERSION": "~3",
                        "APPINSIGHTS_INSTRUMENTATIONKEY": "[parameters('appInsightsKey')]",
                        "FUNCTIONS_WORKER_RUNTIME": "dotnet",
                        "WEBSITE_TIME_ZONE": "[variables('timeZone')]",
                        "WEBSITE_ADD_SITENAME_BINDINGS_IN_APPHOST_CONFIG": 1
                    }
                }
            ]
        }
    ]
}
